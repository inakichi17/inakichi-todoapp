<div class="container">

  <div class="header-logo">
		    <p>Boards</p>
  </div>
  <div class="line"></div>

  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: 'text' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'field-size' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'text' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'field-size' %>
    </div>
    
    <div class="actions">
      <%= f.submit "Submit" , class: 'button' %>
    </div>
  <% end %>
</div>